{
  "compilerOptions": {
    "outDir": "./pre-build",
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  },
  "include": ["./scripts/**/*"],
  "exclude": ["./node_modules", "./scripts/types/**/*"]
}
